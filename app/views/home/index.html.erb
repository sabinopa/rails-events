<% if supplier_signed_in? && @company.supplier == current_supplier %>
  <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3">
    <%= link_to t('views.show.my_company'), company_path(@company), class: "btn btn-primary btn-lg px-5 py-3 me-sm-3 fs-6 fw-bolder" %>
  </div>
<% end %>

<div class="container px-2 px-lg-5 mt-5">
  <h4 class="text-primary fw-bolder mb-4 text-center"><%= t('views.show.find_here') %></h4>
  <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    <% @companies.each do |company| %>
      <div class="col mb-5">
        <div class="card h-100">
          <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Imagem da Empresa" />
          <div class="card-body p-4">
            <div class="text-center">
              <p class="text-primary fw-bolder mb-0">
                <%= link_to "#{company.brand_name}", company_path(company) %>
              </p>
                <div class="small text-muted"><small><%= "#{company.city}, #{company.state}" %></small></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
